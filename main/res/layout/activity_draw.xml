<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="landscape"
    tools:context=".draw">

    <FrameLayout
        android:layout_width="510dp"
        android:layout_height="253dp"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imageView23"
            android:layout_width="489dp"
            android:layout_height="260dp"
            android:layout_marginEnd="56dp"
            android:layout_marginRight="56dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/skylight2" />
    </FrameLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="82dp"
        android:layout_height="313dp"
        android:background="#FCF5C7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/bucket"
            android:layout_width="56dp"
            android:layout_height="59dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/bucket" />

        <ImageView
            android:id="@+id/size"
            android:layout_width="53dp"
            android:layout_height="59dp"
            android:layout_marginBottom="84dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/size" />

        <Button
            android:id="@+id/button11"
            android:layout_width="68dp"
            android:layout_height="34dp"
            android:layout_marginEnd="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="128dp"
            android:background="#ffffff"
            android:text="清除"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="534dp"
        android:layout_height="64dp"
        android:layout_marginLeft="80dp"
        android:layout_marginStart="80dp"
        android:background="#FCF5C7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/pencil"
            android:layout_width="42dp"
            android:layout_height="57dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/pencil" />

        <ImageView
            android:id="@+id/crayon"
            android:layout_width="38dp"
            android:layout_height="57dp"
            android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/crayon" />

        <ImageView
            android:id="@+id/waterbruch"
            android:layout_width="23dp"
            android:layout_height="62dp"
            android:layout_marginLeft="70dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/waterbruch" />

        <ImageView
            android:id="@+id/highlight"
            android:layout_width="34dp"
            android:layout_height="55dp"
            android:layout_marginLeft="92dp"
            android:layout_marginStart="92dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/highlight" />

        <ImageView
            android:id="@+id/eraser"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="128dp"
            android:layout_marginStart="128dp"
            android:layout_marginTop="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/eraser" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="62dp"
            android:layout_height="58dp"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button"
            app:srcCompat="@drawable/color" />

        <Button
            android:id="@+id/button"
            android:layout_width="77dp"
            android:layout_height="43dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="152dp"
            android:layout_marginRight="152dp"
            android:background="#ffffff"
            android:text="完成→"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/plus"
            android:layout_width="16dp"
            android:layout_height="15dp"
            android:layout_marginBottom="3dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView8"
            app:layout_constraintEnd_toEndOf="@+id/imageView8"
            app:srcCompat="@drawable/addcolor" />

        <ImageView
            android:id="@+id/red"
            android:layout_width="22dp"
            android:layout_height="17dp"
            android:layout_marginLeft="1dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            app:layout_constraintStart_toStartOf="@+id/imageView8"
            app:layout_constraintTop_toTopOf="@+id/imageView8"
            app:srcCompat="@drawable/red" />

        <ImageView
            android:id="@+id/green"
            android:layout_width="18dp"
            android:layout_height="17dp"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="1dp"
            app:layout_constraintStart_toStartOf="@+id/imageView8"
            app:layout_constraintTop_toTopOf="@+id/imageView8"
            app:srcCompat="@drawable/green" />

        <ImageView
            android:id="@+id/blue"
            android:layout_width="18dp"
            android:layout_height="17dp"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView8"
            app:layout_constraintTop_toTopOf="@+id/green"
            app:srcCompat="@drawable/blue" />

        <ImageView
            android:id="@+id/purple"
            android:layout_width="18dp"
            android:layout_height="21dp"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="17dp"
            app:layout_constraintStart_toStartOf="@+id/imageView8"
            app:layout_constraintTop_toTopOf="@+id/green"
            app:srcCompat="@drawable/purple" />

        <ImageView
            android:id="@+id/pink"
            android:layout_width="19dp"
            android:layout_height="21dp"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="17dp"
            app:layout_constraintStart_toStartOf="@+id/imageView8"
            app:layout_constraintTop_toTopOf="@+id/green"
            app:srcCompat="@drawable/pink" />

        <ImageView
            android:id="@+id/black"
            android:layout_width="19dp"
            android:layout_height="23dp"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView8"
            app:layout_constraintTop_toTopOf="@+id/imageView8"
            app:srcCompat="@drawable/black" />

        <ImageView
            android:id="@+id/yellow"
            android:layout_width="18dp"
            android:layout_height="19dp"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView8"
            app:layout_constraintStart_toStartOf="@+id/imageView8"
            app:srcCompat="@drawable/yellow" />

        <ImageView
            android:id="@+id/white"
            android:layout_width="17dp"
            android:layout_height="20dp"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="23dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView8"
            app:layout_constraintStart_toStartOf="@+id/imageView8"
            app:srcCompat="@drawable/white" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="68dp"
            android:layout_height="57dp"
            android:layout_marginLeft="170dp"
            android:layout_marginStart="170dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/palette" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>